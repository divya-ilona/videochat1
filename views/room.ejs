    <style>
        #video-grid{
           display: flex;
           justify-content: center;
           flex-wrap: wrap;
        }
        video{
           height: 300px;
           width: 400px;
           object-fit: cover;
           padding: 8px;
        }
     </style>
     <script type="text/javascript">
      var number = ROOM_ID; 
      function docWrite(variable) {
         // write the room number on modal popup
          document.write(variable);
      }
      </script>
</head>

<body>
    <div class="main">
        <div class="main__left">
           <div class="main__videos">
              <div id="video-grid">
        
              </div>
           </div>
           <div class="main__controls">
              <div class="main__controls__block">
                 <div onclick="muteUnmute()" class="main__controls__button main__mute_button">
                    <i class="fas fa-microphone"></i>
                    <span>Mute</span>
                 </div>
                 <div onclick="playStop()" class="main__controls__button main__video_button" >
                    <i class="fas fa-video"></i>
                    <span>Stop Video</span>
                 </div>
              </div>
 <!-------------------------------------meeting info-------------------------------->
              <div class="main__controls__block">
                 <div class="main__controls__button">
                    <i class="fas fa-share"></i>
                    <span id="modal-btn" class="button">Share link</span>
                     <div id="my-modal" class="modal">
                        <div class="modal-content">
                           <div class="modal-header">
                           <span class="close">&times;</span>
                           Share Joining Information
                           </div>
                           <div class="modal-body">
                           <p>cloneteam.herokuapp.com/<script>docWrite(number)</script></p>
                           </div>
                        </div>
                     </div>
                 </div>

<!---------------------X----------------meeting info-------------------------X------------------>
              </div>
              <div class="main__controls__block">
                 <!-------on click redirect back to home page------------->
                 <div onclick="Leavemeet()" class="main__controls__button">
                    <span class="leave_meeting">Leave Meeting</span>
                 </div>
              </div>
           </div>
        </div>
        <!------------------chat container--------------->
        <div class="main__right">
           <div class="main__header">
              <h6>Chat</h6>
               <p> Press Enter to send your message</p>
           </div>
           <div class="main__chat_window" id="message-container">
              <ul class="messages">
                 
              </ul>
  
           </div>
           <div class="message_container">
            <input id="chat_message" type="text" placeholder="Type your message here.....">
            </div>
         </div>
           <!----------x--------chat container-----------x---->
        </div>
     </div>
   
